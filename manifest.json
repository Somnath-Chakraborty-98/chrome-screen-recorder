{
  "manifest_version": 3,
  "name": "Screen Recorder with Audio (Mic-first)",
  "description": "Chrome extension to record screen and audio",
  "version": "1.1.0",
  "action": {
    "default_popup": "src/presentation/popup/popup.html",
    "default_title": "Screen Recorder"
  },
  "permissions": [
    "tabCapture",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://*.teams.microsoft.com/*",
    "https://teams.live.com/*",
    "https://*.teams.live.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://*.teams.microsoft.com/*",
        "https://teams.live.com/*",
        "https://*.teams.live.com/*"
      ],
      "js": ["src/application/content/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/application/background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
