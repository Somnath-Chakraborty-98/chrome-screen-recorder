{
  "manifest_version": 3,
  "name": "Screen Recorder + AI",
  "version": "__VERSION__",
  "description": "Record screen + audio and analyze with AI.",
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background/serviceWorker.js"
  },
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": []
}
